extends ./index

block contenido
    h1.text-2xl.font-bold.mb-4 Inscripciones por Estudiante

    // SelecciÃ³n de estudiantes
    form(action='/inscripcionesPorAlumno', method='get', class='mb-4')
        label(for='estudiante', class='block mb-2 text-sm font-medium text-gray-700') Selecciona un estudiante:
        select#estudiante(name='estudiante', onchange='this.form.submit()', class='w-full px-3 py-2 border border-gray-300 rounded-md')
            option(value='') Selecciona un estudiante
            each estudiante in estudiantes
                option(value=estudiante.id)= estudiante.nombre

    // Tabla de inscripciones
    if inscripciones && inscripciones.length > 0
        table(class='min-w-full divide-y divide-gray-200')
            thead(class='bg-gray-50')
                tr
                    th(class='px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider') Curso
                    th(class='px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider') Nota
                    th(class='px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider') Fecha
            tbody(class='bg-white divide-y divide-gray-200')
                each inscripcion in inscripciones
                    tr
                        td(class='px-6 py-4 whitespace-nowrap')= inscripcion.curso.nombre
                        td(class='px-6 py-4 whitespace-nowrap')= inscripcion.nota || 'No calificada'
                        td(class='px-6 py-4 whitespace-nowrap')= inscripcion.fecha ? inscripcion.fecha.toLocaleDateString() : 'No disponible'
    else
        p(class='mt-4 text-red-600') No hay inscripciones para el estudiante seleccionado.

block scripts